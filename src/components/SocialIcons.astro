---
import * as Icon from '@astropub/icons'

interface Props {
  className?: string;
  links?: Array<{
    href: string;
    icon: keyof typeof Icon | 'LinkedIn';
    label: string;
    target?: string;
  }>;
}

const { className = '', links = [
  { 
    href: "/thoughts", 
    icon: "Bookmark",
    label: "Thoughts"
  },
  { 
    href: "/cv", 
    icon: "Download",
    label: "CV"
  },
  { 
    href: "https://github.com/karina-tc", 
    icon: "GitHubLogo",
    label: "GitHub",
    target: "_blank"
  },
  { 
    href: "https://www.linkedin.com/in/karina-tovar-castro/", 
    icon: "LinkedIn",
    label: "LinkedIn",
    target: "_blank"
  },
  { 
    href: "mailto:hello@karinatovar.com", 
    icon: "EnvelopeClosed",
    label: "Email",
    target: "_blank"
  }
]} = Astro.props;

const getIcon = (iconName: keyof typeof Icon | 'LinkedIn') => {
  if (iconName === 'LinkedIn') return null;
  return Icon[iconName as keyof typeof Icon] || null;
}
---

<nav class={`flex items-center gap-4 ${className}`}>
  {links.map(({ href, icon, label, target }) => {
    const IconComponent = getIcon(icon);
    
    return (
      <a 
        href={href} 
        target={target}
        rel="noopener noreferrer" 
        class="relative hover:underline group"
        aria-label={label}
      >
        <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-2 py-1 text-xs text-paper bg-inkDark rounded opacity-0 pointer-events-none transition-opacity group-hover:opacity-100">
          {label}
        </span>
        {icon === 'LinkedIn' 
          ? (
            <svg 
              width="20" 
              height="20" 
              viewBox="0 0 15 15" 
              fill="none" 
              xmlns="http://www.w3.org/2000/svg"
            >
              <path 
                d="M2 1C1.44772 1 1 1.44772 1 2V13C1 13.5523 1.44772 14 2 14H13C13.5523 14 14 13.5523 14 13V2C14 1.44772 13.5523 1 13 1H2ZM3.05 6H4.95V12H3.05V6ZM5.075 4.005C5.075 4.59871 4.59371 5.08 4 5.08C3.4063 5.08 2.925 4.59871 2.925 4.005C2.925 3.41129 3.4063 2.93 4 2.93C4.59371 2.93 5.075 3.41129 5.075 4.005ZM12 8.35713C12 6.55208 10.8334 5.85033 9.67449 5.85033C9.29502 5.83163 8.91721 5.91119 8.57874 6.08107C8.32172 6.21007 8.05265 6.50523 7.84516 7.01853H7.79179V6.00044H6V12.0047H7.90616V8.8112C7.8786 8.48413 7.98327 8.06142 8.19741 7.80987C8.41156 7.55832 8.71789 7.49825 8.95015 7.46774H9.02258C9.62874 7.46774 10.0786 7.84301 10.0786 8.78868V12.0047H11.9847L12 8.35713Z" 
                fill="currentColor" 
                fill-rule="evenodd" 
                clip-rule="evenodd"
              />
            </svg>
          )
          : IconComponent && <IconComponent size="20" class="text-inkDark" />
        }
      </a>
    );
  })}
</nav>

<style>
  /* Optional: Add a small triangle to the tooltip */
  .group:hover span::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border-width: 5px;
    border-style: solid;
    border-color: rgb(var(--color-ink-dark)) transparent transparent transparent;
  }
</style>
