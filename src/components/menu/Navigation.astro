---
const navigationItems = [
  { path: '/', label: 'Home', image: '/house.png' },
  { path: '/about', label: 'About', image: '/folder.png' },
  { path: '/work', label: 'Work', image: '/briefcase.png' },
  { path: '/thoughts', label: 'Thoughts', image: '/book.png' },
  { path: '/contact', label: 'Contact', image: '/keyboard.png' },
];
---
<div id="links-content" class="w-full transition-all duration-300 opacity-100 pointer-events-auto relative">
  <div 
    id="links-illustration"
    class="w-80 h-80 bg-cover rounded-full absolute left-1/2 -translate-x-1/2 opacity-0 -top-20 transition-all duration-300 my-[33%] mx-auto"
  ></div>
  <nav class="flex flex-col justify-center items-center gap-6">
    {
      navigationItems.map(({ path, label, image }) => (
        <a 
          href={path} 
          class="menu-link group" 
          data-path={path}
          data-image={image}
        >
          <span>{label}</span>
        </a>
      ))
    }
  </nav>
</div>

<style>
  .menu-link {
    @apply text-7xl text-inkDark font-instrument transition-all duration-300 hover:text-brand relative opacity-0 -translate-y-4
    max-lg:text-5xl;
    animation: fadeInUp 0.5s forwards;
    animation-delay: calc(var(--index) * 100ms);
  }

  .menu-link.active {
    @apply text-brand;
  }

  .menu-link.active::after {
    content: '';
    @apply absolute -bottom-2 left-0 w-full h-0.5 bg-brand;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
