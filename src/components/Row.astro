---
interface Props {
  title: string;
  date: string;
  categories: string[];
  href: string;
}

const { title, date, categories, href } = Astro.props;
---

<a href={href} class="row" data-row data-date={date} data-categories={categories.join(',')}>
  <div class="marker"></div>
  <div class="details">
    <h3>{title}</h3>
    <p>{date} Â· {categories.join(', ')}</p>
  </div>
  <div class="arrow">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M5 12h14"></path>
      <path d="m12 5 7 7-7 7"></path>
    </svg>
  </div>
</a>

<style>
  .row {
    @apply bg-white p-4 rounded-md w-full max-w-[640px] flex items-start gap-5 border border-white transition-all duration-300 ease-in-out hover:shadow-lg hover:-mt-1 hover:mb-1 cursor-pointer;
  }
  .marker {
    @apply mt-3 block w-3 h-3 min-w-3 min-h-3 rounded-full bg-red-500 transition-all duration-300 ease-in-out;
  }
  .row:hover .marker {
    @apply bg-red-600 scale-110;
  }
  .details {
    @apply py-1 flex-1;
  }
  .details h3 {
    @apply font-medium text-lg transition-colors duration-300 ease-in-out;
  }
  .row:hover .details h3 {
    @apply text-red-600;
  }
  .details p {
    @apply text-sm text-gray-600;
  }
  .arrow {
    @apply text-gray-400 transition-all duration-300 ease-in-out transform translate-x-0 opacity-0;
  }
  .row:hover .arrow {
    @apply text-red-600 translate-x-1 opacity-100;
  }
</style>
