---
import '../styles/global.css';

interface Props {
  href?: string;
  onClick?: () => void;
  type?: 'link' | 'button';
  additionalClasses?: string;
  children: any;
}

const { href, onClick, type = 'button', additionalClasses = '', children } = Astro.props;
---

{type === 'link' ? (
  <a href={href} class="button ${additionalClasses}">
    <slot />
  </a>
) : (
  <button onClick={onClick} class="button ${additionalClasses}">
    <slot />
  </button>
)}

<style>
  .button {
    @apply bg-black p-2 px-4 rounded-md mt-4 text-white;
  }
</style>