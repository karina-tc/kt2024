---
interface Props {
  category: string;
  isButton?: boolean;
  isActive?: boolean;
}

const { 
  category, 
  isButton = false,
  isActive = false
} = Astro.props;

const baseClasses = "flex w-fit justify-center flex-wrap gap-2 uppercase text-xs font-mono tracking-widest rounded-full px-4 py-1.5 transition-all duration-300";
const buttonClasses = "bg-paper text-ink cursor-pointer shadow-md shadow-inkLighter/25 hover:-translate-y-[1px] hover:shadow-lg hover:bg-inkDark hover:text-paper";
const pillClasses = "bg-inkDark text-paper";
---

{isButton ? (
  <Button variant="button" class:list={[baseClasses, buttonClasses, { "category-active": isActive }]} data-category={category}>
    {category}
  </button>
) : (
  <span class:list={[baseClasses, pillClasses]}>
    {category}
  </span>
)}

<style>
  .category-button:hover {
    @apply -translate-y-[1px] shadow-lg shadow-inkLighter/50 bg-inkDark text-paper;
  }
  .category-active {
    @apply bg-inkDark text-paper;
  }
</style>
